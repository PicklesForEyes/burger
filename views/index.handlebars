<div class="container">
  <div class="page-header">
    <h1>Get Yah Some Burgers</h1>
  </div>

{{#each burgers}}
{{#if devoured}}
  <div class="eaten">
    <div class="panel panel-default">
      <div class="panel panel-heading">
        <h2>{{burger_name}}</h2>
        <button type="submit" class="btn btn-default" id="{{id}}">Remove Burger</button>
      </div>
    </div>
  </div>
{{else}}
  <div class="uneaten">
    <div class="panel panel-default">
      <div class="panel panel-heading">
        <h2>{{burger_name}}</h2>
        <button type="submit" class="btn btn-default" id="{{id}}">Eat it up!</button>
      </div>
    </div>
  </div>
{{/if}}
{{/each}}
</div>
